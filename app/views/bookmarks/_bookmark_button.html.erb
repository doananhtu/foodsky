<% if current_user.has_bookmark?(recipe.id)%>
  <%= link_to recipe_bookmark_path(recipe_id: recipe.id, id: 0),
    remote: true,
    method: 'delete',
    id: "button-bookmark-recipe-#{recipe.id}" do %>
      <span class= "btn btn-default" title="Unbookmark"><i class="fa fa-bookmark bookmark" aria-hidden="true"></i></span>
  <% end %>
<% else %>
  <%= link_to recipe_bookmarks_path(recipe_id: recipe.id),
    remote: true,
    method: 'post',
    id: "button-bookmark-recipe-#{recipe.id}" do %>
      <span class= "btn btn-default" title="Bookmark"><i class="fa fa-bookmark-o bookmark" aria-hidden="true"></i></span>
  <% end %>
<% end %>
