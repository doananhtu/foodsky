<script>
  new WOW().init();
</script>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="row jumbotron cover-wrap">
      <div class="col-3 text-center">
        <%= image_tag avatar_url(@user), class: "img-circle w-50" %>
        <p class= "user-name-cover"> <%= @user.name %> </p>
        <a id="followers-count-user" href="#"><%= @user.followers.count %> follower</a>
      </div>
      <div class="col-9">
        <p>Share recipes!</p>
        <br>
        <p>            Share your knowledge!</p>
        <br>
        <p>                        Share your passion!</p>
        <% if current_user.id != @user.id %>
          <%= render partial: 'shared/follow_button', locals: { target: @user } %>
        <% end %>
      </div>
    </div>


    <div class="row mt-10" style="margin-top: 30px">
      <ul class="card-columns">
        <% if @user.recipes.any? %>
          <% @user.recipes.each do |recipe| %>
            <%= render partial: 'shared/recipe_small', locals: {recipe: recipe} %>
          <% end %>
        <% else %>
      </ul>
    </div>
          <div class="jumbotron">
            <% if current_user.name == @user.name %>
              <h2>You don't have any recipes. Create recipe now!</h2>
              <p></p>
              <%= link_to "Create recipe now", new_recipe_path, class: "btn btn-primary btn-lg" %>
            <% else %>
              <h2>This user haven't had any recipes yet!</h2>
            <% end %>
          </div>
        <% end %>
  </div>
</div>
